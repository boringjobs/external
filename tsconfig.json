{
  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "moduleResolution": "node",
    "allowJs": true,
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2019",
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": [
    "src/**/*"
  ],
}